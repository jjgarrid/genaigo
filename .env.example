# GenAI Go - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# AI Provider Configuration
# Set the default AI provider for analysis (openai, claude, deepseek, ollama)
GENAIGO_ANALYSIS_PROVIDER=deepseek

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Claude (Anthropic) Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Ollama Configuration (for local models)
OLLAMA_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434

# Gmail Configuration (if needed for advanced features)
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# GMAIL_REFRESH_TOKEN=auto_generated_after_oauth

# Application Configuration
# LOG_LEVEL=INFO
# API_BASE_URL=http://localhost:8000
# FRONTEND_URL=http://localhost:5173
